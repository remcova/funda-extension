{
  "manifest_version": 3,
  "name": "Funda Property Summarizer",
  "version": "1.0",
  "description": "Summarizes property information from Funda listings",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.funda.nl/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
